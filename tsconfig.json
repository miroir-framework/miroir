{
  "compilerOptions": {  
    "types": ["node", "jest"],
    "removeComments": true,
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports":true,
    "resolveJsonModule": true,
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ],
  },
}