{
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports":true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@App/*": ["src/*"],
    }
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "esm"
    },
    "compilerOptions": {
      "rootDir": ".",
      "module": "ES2022",
      "target": "ES2022",
    }
  },
}