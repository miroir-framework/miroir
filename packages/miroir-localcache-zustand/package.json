{
  "name": "miroir-localcache-zustand",
  "private": true,
  "version": "0.0.0",
  "description": "The Miroir implementation of Local Cache and Remote Access based on Zustand.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "build3": "npm run build",
    "build4": "npm run build",
    "build5": "npm run build",
    "vitest": "vitest run --poolOptions.threads.singleThread --passWithNoTests"
  },
  "tsup": {
    "dts": true,
    "clean": false,
    "bundle": true,
    "treeshake": true,
    "target": "node20",
    "format": [
      "esm"
    ],
    "entry": [
      "src/index.ts"
    ],
    "external": [
      "fs"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "fast-deep-equal": "^3.1.3",
    "immer": "^10.0.3",
    "lodash": "^4.17.21",
    "miroir-core": "*",
    "zustand": "^4.5.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "rimraf": "^4.1.1",
    "tsconfig-paths": "^4.1.2",
    "tsup": "^8.0.1",
    "typescript": "^4.9.4",
    "vite": "4.5.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "author": "Miroir Framework <miroir-framework@protonmail.com>",
  "license": "MIT"
}
