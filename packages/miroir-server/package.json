{
  "name": "miroir-server",
  "version": "1.0.0",
  "description": "server for mirroir-based front-end",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "watch": "lerna watch --scope='miroir-server' --include-dependencies -- lerna run build --scope='miroir-server'",
    "start": "node server.bundle.js",
    "build": "npm run copy-all && webpack",
    "copy-files": "copyfiles -u 1 src/**/*.json src/**/*.css dist/src",
    "copy-config": "copyfiles -u 1 config/**/*.json dist/config",
    "copy-all": "npm run copy-files && npm run copy-config",
    "dev": "nodemon ./server.ts --experimental-json-modules localhost 3080",
    "dev2": "npm run copy-all && concurrently \"npx tsc --watch\" \"nodemon -q dist/src/server.js --experimental-json-modules localhost 3080\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XXXXXXXXXXXXXXXXXXXXXXXX.git"
  },
  "author": "Arnaud Bailly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/XXXXXXXXXXXXXXXXXXXXXXXXX/issues"
  },
  "homepage": "https://github.com/XXXXXXXXXXXXXXXXXXXXXXXXXXX#readme",
  "dependencies": {
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.4",
    "isomorphic-git": "^1.23.0",
    "miroir-core": "*",
    "miroir-store-filesystem": "*",
    "miroir-store-indexedDb": "*",
    "miroir-store-postgres": "*",
    "prettier": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.4",
    "body-parser": "^1.20.2",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.4",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "webpack": "^4.43.0"
  }
}
