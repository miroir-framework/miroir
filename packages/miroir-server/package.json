{
  "name": "miroir-server",
  "version": "1.0.0",
  "description": "server for mirroir-based front-end",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "copy-files": "copyfiles -u 1 src/**/*.json src/**/*.css dist/src",
    "copy-config": "copyfiles -u 1 config/**/*.json dist/config",
    "copy-all": "npm run copy-files && npm run copy-config",
    "dev": "vite --host",
    "build": "npm run copy-all && vite build",
    "build-webpack": "npm run copy-all && webpack",
    "dev-nodemon": "npm run copy-all && concurrently \"npx tsc --watch\" \"nodemon -q dist/src/server.js --experimental-json-modules localhost 3080\"",
    "test": "cross-env NODE_ENV=test vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XXXXXXXXXXXXXXXXXXXXXXXX.git"
  },
  "author": "Arnaud Bailly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/XXXXXXXXXXXXXXXXXXXXXXXXX/issues"
  },
  "homepage": "https://github.com/XXXXXXXXXXXXXXXXXXXXXXXXXXX#readme",
  "dependencies": {
    "@miroir-framework/jzod": "^0.5.3",
    "@miroir-framework/jzod-ts": "^0.5.3",
    "babel-loader": "^9.1.3",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.4",
    "isomorphic-git": "^1.23.0",
    "loglevelnext": "^6.0.0",
    "miroir-core": "*",
    "miroir-server-msw-stub": "*",
    "miroir-store-filesystem": "*",
    "miroir-store-indexedDb": "*",
    "miroir-store-postgres": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.4",
    "body-parser": "^1.20.2",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.4",
    "ts-loader": "^9.4.4",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "vite-plugin-node": "^3.0.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
