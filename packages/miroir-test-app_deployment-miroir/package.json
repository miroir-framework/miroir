{
  "name": "miroir-test-app_deployment-miroir",
  "private": true,
  "version": "0.0.0",
  "description": "Miroir deployment assets (miroir_model and miroir_data) for the Miroir Framework",
  "author": "Miroir Framework <miroir-framework@protonmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "LICENSE.md",
    "package.json",
    "index.d.ts",
    "dist/index.js",
    "dist/index.js.map"
  ],
  "scripts": {
    "copy-files": "copyfiles -u 1 assets/**/*.json dist/assets",
    "build": "tsup",
    "test": "vitest run --poolOptions.threads.singleThread -t",
    "testByFile": "vitest run --poolOptions.forks.singleFork --reporter=verbose"
  },
  "devDependencies": {
    "miroir-core": "*",
    "copyfiles": "^2.4.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
