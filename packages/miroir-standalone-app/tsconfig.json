{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src/",
    "rootDir": "./"
  },
  "exclude": [
    "./node_modules/**",
    "./src/**/*.spec.js",
    "./src/**/*.spec.jsx",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./tests/**"
  ],
  "include": [
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}