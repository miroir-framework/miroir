{
  "name": "miroir-core",
  "private": true,
  "version": "0.0.0",
  "description": "The core Miroir components. Without it, Miroir will not work.",
  "author": "Miroir Framework <miroir-framework@protonmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npm run copy-files && tsup",
    "build1": "npm run devBuild",
    "build2": "npm run devBuild",
    "build3": "npm run devBuild",
    "build4": "npm run devBuild",
    "build5": "npm run devBuild",
    "devBuild": "npm run preBuild && npm run build",
    "copy-files": "copyfiles -u 1 src/**/*.json src/**/*.css dist/src",
    "preBuild": "copyfiles -u 1 src/**/*.json tmp/ && tsc ./src/index.ts --rootDir . --baseUrl . --target ES2017 --module ES2022 --strict --moduleResolution node --allowSyntheticDefaultImports --resolveJsonModule --outdir ./tmp/ || node ./tools/generate-ts-types.mjs",
    "preTest": "tsc ./tests/1_core/jzod.unit.test.ts --rootDir . --baseUrl . --target ES2017 --module ES2022 --moduleResolution node --allowSyntheticDefaultImports --resolveJsonModule --outdir ./tmp/",
    "test": "cross-env NODE_ENV=test jest --verbose --silent=false -t"
  },
  "tsup": {
    "dts": true,
    "clean": false,
    "bundle": true,
    "treeshake": true,
    "target": "node20",
    "format": [
      "esm"
    ],
    "entry": [
      "src/index.ts"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@miroir-framework/jzod": "0.6.3",
    "@miroir-framework/jzod-ts": "^0.6.3",
    "mustache": "^4.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-attributes": "^7.23.3",
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.4",
    "@types/mustache": "^4.2.5",
    "copyfiles": "^2.4.1",
    "tsup": "^8.0.1",
    "typescript": "^4.9.4"
  }
}
