{
  "name": "miroir-core",
  "private": true,
  "version": "0.0.0",
  "description": "The core Miroir components. Without it, Miroir will not work.",
  "main": "dist/bundle.js",
  "types": "dist/bundle.d.ts",
  "type": "module",
  "dependencies": {
    "@jridgewell/sourcemap-codec": "^1.4.14",
    "@rollup/plugin-commonjs": "^24.0.1",
    "rollup": "^3.10.1",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@rollup/plugin-json": "^6.0.0",
    "@types/jest": "^29.2.4",
    "copyfiles": "^2.4.1",
    "rimraf": "^4.1.1",
    "tsconfig-paths": "^4.1.2"
  },
  "scripts": {
    "build": "rimraf dist && tsc && npm run copy-files && rollup --config",
    "copy-files": "copyfiles -u 1 src/**/*.json src/**/*.css dist/out-tsc/dts/src",
    "test": "jest --verbose --silent=false -t"
  },
