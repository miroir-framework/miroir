{
  "name": "miroir-core",
  "private": true,
  "version": "0.0.0",
  "description": "The core Miroir components. Without it, Miroir will not work.",
  "main": "dist/bundle.js",
  "types": "dist/bundle.d.ts",
  "type": "module",
  "scripts": {
    "watch": "lerna watch --scope='miroir-core' --include-dependencies -- lerna run build --scope='miroir-core'",
    "build": "npm run copy-files && npm run generate-types && rollup --config",
    "build1": "npm run build",
    "build2": "npm run build",
    "build3": "npm run build",
    "build4": "npm run build",
    "build5": "npm run build",
    "copy-files": "copyfiles -u 1 src/**/*.json src/**/*.css dist/src",
    "generate-types": "node ./src/generate-ts-types.mjs",
    "test": "cross-env NODE_ENV=test jest --verbose --silent=false -t"
  },
  "author": "Arnaud Bailly <miroir-framework@protonmail.com>",
  "license": "MIT",
  "dependencies": {
    "@miroir-framework/jzod": "*",
    "@miroir-framework/jzod-ts": "*",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-modules-commonjs": "^7.20.11",
    "@jest/globals": "^29.3.1",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@types/jest": "^29.2.4",
    "babel-jest": "^29.4.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^4.1.1",
    "rollup": "^3.10.1",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "serialize-javascript": "^6.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "zod-to-json-schema": "^3.21.2"
  }
}
