{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
    "resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
    "strict": true,
		"noEmit": true,
    "outDir": "dist/out-tsc",
    "declaration": true,
    "rootDir": "./",
    "baseUrl": "./",
    "types": ["node", "jest"],
  },
  "exclude": [
    "dist",
    "./node_modules/**",
    "./tests/**",
    "./src/**/*.spec.js",
    "./src/**/*.spec.jsx",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx"
  ],
  "include": [
    "./scripts/**/*",
    "./src/**/*.json",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./scripts/**/*"
  ]
}